<script>
    var template = function(element) {
        var imgBase = "{{ asset('flags/4x3/nl.svg') }}";

        var img = element.element == undefined ||
            element.element.dataset == undefined ||
            element.element.dataset['alpha2'] == undefined ||
            element.element.dataset['alpha2'] == ""
            ? ''
            : '<img src="' + imgBase.replace("nl.svg", element.element.dataset['alpha2'] + ".svg", 1) + '" class="countryflag">&nbsp;';

        return img + element.text;
    };

    $('{{ field }}').select2({
        templateResult: template,
        templateSelection: template,

        // Prevent escaping
        escapeMarkup: function(t) {
            return t;
        },
        theme: "bootstrap"
    });

</script>
