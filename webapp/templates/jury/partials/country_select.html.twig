<script>
    var template = function(element) {
        var imgBase = "{{ asset('images/countries/NLD.png') }}";

        var img = element.id == undefined || element.id == ""
            ? ''
            : '<img src="' + imgBase.replace("NLD.png", element.id + ".png", 1) + '" class="countryflag">&nbsp;';

        return img + element.text;
    };

    $('{{ field }}').select2({
        templateResult: template,
        templateSelection: template,

        // Prevent escaping
        escapeMarkup: function(t) {
            return t;
        },
        theme: "bootstrap"
    });

</script>
