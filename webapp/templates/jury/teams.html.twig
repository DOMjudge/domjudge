{% extends "jury/base.html.twig" %}
{% import "jury/jury_macros.twig" as macros %}

{% block title %}Teams - {{ parent() }}{% endblock %}

{% block extrahead %}
    {{ parent() }}
    {{ macros.table_extrahead() }}
{% endblock %}

{% block content %}

    <h1>Teams</h1>

    {{ macros.table(teams, table_fields, num_actions) }}

    {%- if is_granted('ROLE_ADMIN') %}

        <p>
            {{ button(path('jury_team_add'), 'Add new team', 'primary', 'plus') }}
            {{ button(path('jury_import_export', {'_fragment':'teams'}), 'Import teams', 'primary', 'upload') }}
            <button type="submit" form="multidelete" class="btn btn-danger" name="multidelete_submit">
                <i class="fa fa-trash"></i> Remove selected teams
            </button>
        </p>
    {%- endif %}
{% endblock %}
