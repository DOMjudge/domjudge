{% extends "partials/modal.html.twig" %}

{% block title %}
    {% if primaryKey|length==1 %}
        Delete {{ type }} {{ primaryKey }} - "{{ description }}"
    {% else %}
        Delete {{primaryKey|length}} {{ type }}s
    {% endif %}
{% endblock %}

{% block content %}

    {% if isError %}
        <div class="alert alert-danger">
            <strong>Error: {{ messages.0 }}</strong>
        </div>
    {% else %}
        {% if primaryKey|length==1 %}
            <p>You're about to delete {{ type }} {{ primaryKey }} "{{ description }}".</p>
        {% else %}
            <p>
                You're about to delete {{ type }}s:
                <ul>
                    {% for singlePrimaryKey in primaryKey %}
                        <li>{{ singlePrimaryKey }} "{{ description[loop.index0] }}".</li>
                    {% endfor %}
                </ul>
            </p>
        {% endif %}

        {% if messages is not empty %}
            <p>
                <strong>Warning, this will:</strong>
            </p>
            <ul>
                {% for message in messages %}
                    <li>{{ message }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <p>Are you sure?</p>
    {% endif %}

{% endblock %}

{% block closeButtonText %}
    {% if isError %}OK{% else %}Cancel{% endif %}
{% endblock %}

{% block buttonText %}Delete{% endblock %}
