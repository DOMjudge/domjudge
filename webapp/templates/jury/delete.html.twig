{% extends "jury/base.html.twig" %}

{% block title %}
    {% if primaryKey|length==1 %}
        Delete {{ type }} {{ primaryKey }} - "{{ description }}" - {{ parent() }}
    {% else %}
        Delete {{primaryKey|length}} {{ type }}s  - {{ parent() }}
    {% endif %}
{% endblock %}

{% block content %}

    {% if primaryKey|length==1 %}
        <h1>Delete {{ type }} {{ primaryKey }} - "{{ description }}"</h1>
    {% else %}
        <h1>Delete {{primaryKey|length}} {{ type }}s</h1>
    {% endif %}

    {% if isError %}
        <div class="alert alert-danger">
            <strong>Error: {{ messages.0 }}</strong>
        </div>
    {% else %}
        <div class="alert alert-warning">
            <form method="post">
                {% if primaryKey|length==1 %}
                    <p>You're about to delete {{ type }} {{ primaryKey }} "{{ description }}".</p>
                {% else %}
                    <p>
                        You're about to delete {{ type }}s:
                        <ul>
                            {% for singlePrimaryKey in primaryKey %}
                                <li>{{ singlePrimaryKey }} "{{ description[loop.index0] }}".</li>
                            {% endfor %}
                        </ul>
                    </p>
                {% endif %}

                {% if messages is not empty %}
                    <p>
                        <strong>Warning, this will:</strong>
                    </p>
                    <ul>
                        {% for message in messages %}
                            <li>{{ message }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}

                <p>Are you sure?</p>
                <hr>
                <a href="{{ redirectUrl }}" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    {% endif %}

{% endblock %}
