{% extends "jury/base.html.twig" %}
{% import "jury/jury_macros.twig" as macros %}

{% block title %}Edit external contest source {{ externalContestSource.extsourceid }} - {{ parent() }}{% endblock %}

{% block extrahead %}
    {{ parent() }}
    {{ macros.select2_extrahead() }}
{% endblock %}

{% block content %}

    <h1>Edit external contest source {{ externalContestSource.extsourceid }}</h1>

    <div class="row">
        <div class="col-lg-4">
            <table class="table table-sm table-striped">
                <tr>
                    <th>External contest source ID</th>
                    <td>{{ externalContestSource.extsourceid }}</td>
                </tr>
            </table>
        </div>
    </div>

    {% include 'jury/partials/external_contest_source_form.html.twig' %}

{% endblock %}
